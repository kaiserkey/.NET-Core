@model IEnumerable<CRUD_MVC_EF.Models.Contacto>
@{
    ViewData["Title"] = "Lista de Contactos";
}

<h1 class="text-center">
    Contacto con .NET 8 (.NET CORE MVC)
</h1>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Inicio" class="btn btn-secondary d-block btn-lg mx-auto">
            <i class="fa fa-plus" aria-hidden="true"></i> Nuevo Usuario
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <div class="text-white">
                    <strong>Lista de Usuarios</strong>
                </div>
               
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table-bordered table" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.IdContacto)</th>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>@Html.DisplayNameFor(m => m.FechaCreacion)</th>
                                    <th>Acciones</th>
                                </tr>
                            <tbody class="text-center">
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.IdContacto)</td>
                                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                                        <td>@Html.DisplayFor(m => item.Telefono)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>@Html.DisplayFor(m => item.FechaCreacion)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.IdContacto">
                                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editar
                                            </a>
                                            <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.IdContacto">
                                                <i class="fa fa-info-circle" aria-hidden="true"></i> Detalle
                                            </a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.IdContacto">
                                                <i class="fa fa-trash" aria-hidden="true"></i> Borrar
                                            </a>
                                        </td>
                                    </tr>
                                    }
                            </tbody>
                            </thead>
                        </table>
                    }
                    else
                    {
                        <p class="text-white">No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>